# Woods Document Search Engine - Backend Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Environment
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
# Required: Elasticsearch host and port
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Optional: Index name (default: wood_ai_documents)
ELASTICSEARCH_INDEX=wood_ai_documents

# Optional: Connection settings
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=5
ELASTICSEARCH_RETRY_DELAY=2

# =============================================================================
# AI/ML Configuration
# =============================================================================
# Embedding model for semantic search
# Options: all-MiniLM-L6-v2 (fast), all-mpnet-base-v2 (accurate)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# =============================================================================
# Paths
# =============================================================================
# Directory containing documents to index
DOCUMENTS_PATH=/app/documents

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json (production), text (development)
LOG_FORMAT=text

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
